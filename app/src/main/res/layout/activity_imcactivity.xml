<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/pesoEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/peso_hint"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/alturaEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/altura_hint"
        android:inputType="numberDecimal"
        android:layout_below="@id/pesoEditText"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/calcularBoton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calcular_boton"
        android:layout_below="@id/alturaEditText"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/resultadoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/calcularBoton"
        android:layout_marginTop="16dp"
        android:textSize="18sp" />

</RelativeLayout>
